import React, { useState } from 'react';

interface BadgeProps {
  label: string;        // The text to be displayed on the badge
  color?: string;       // Optional background color for the badge
  textColor?: string;   // Optional text color for the badge
}

const Badge: React.FC<BadgeProps> = ({ label, color = '#4CAF50', textColor = '#FFFFFF' }) => {
  const [scale, setScale] = useState(1); // State to manage the scale of the badge

  // Inline styles for the badge
  const badgeStyle: React.CSSProperties = {
    display: 'inline-block',
    backgroundColor: color,
    color: textColor,
    padding: '10px 15px',
    borderRadius: '20px',
    fontSize: '14px',
    fontWeight: 'bold',
    boxShadow: '0 2px 5px rgba(0, 0, 0, 0.3)',
    transform: `scale(${scale})`, // Use the scale state for scaling
    transition: 'transform 0.3s',
  };

  return (
    <div
      style={badgeStyle}
      onMouseEnter={() => setScale(1.1)} // Increase scale on mouse enter
      onMouseLeave={() => setScale(1)} // Reset scale on mouse leave
    >
      {label}
    </div>
  );
};

export default Badge;
